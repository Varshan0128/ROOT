rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Block client writes to earlyAccessRequests â€” only server (Admin SDK) should write
    match /earlyAccessRequests/{docId} {
      allow read: if false;  // admin reads via Admin SDK or custom claim flow
      allow write: if false; // disallow direct client writes
    }

    // Deny all other client access by default (adjust when needed)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
